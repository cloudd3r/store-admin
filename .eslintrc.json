{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn", // Предупреждение вместо ошибки для неиспользуемых переменных
    "@typescript-eslint/ban-ts-comment": "warn", // Предупреждение для использования @ts-ignore
    "@typescript-eslint/no-explicit-any": "warn", // Предупреждение для использования any
    "no-var": "warn" // Оставляем как ошибка, чтобы избегать использования var
  }
}
